<%= yield_content_for :page_title, "Setting" %>

<%= box_panel use_footer: false do |outer_template, options|%>
  
  <%= _content_for outer_template, :box_panel_body do %>
    <%= tab_panel list: ["Account", "Instant Payment Notification"], active: params[:active_tab] do |tab, tab_options| %>
    
      <%= _content_for(tab, :tab_content_for_account) do %>
          
        <%= tag :br %>
        <%= form_for current_account, url: settings_path, html: { class: 'form form-horizontal' }, method: :put do |f| %>  
          <%= hidden_field_tag :active_tab, "Account" %>

          <%= render partial: 'settings/account_form', locals: { f: f, account: current_account } %>          
          
          <%= submit_buttons_wrapper divider: false do %>
            <%= link_to root_path, class: 'btn btn-danger' do %>
              <%= content_tag :i, "Cancel", class: 'fa fa-remove' %>
            <%- end %>
            <%= button_tag :type => :submit, class: 'btn btn-primary', value: "update-account" do %>
              <%= content_tag :i, "Update", class: 'fa fa-edit' %>
            <%- end %>
          <%- end %>

        <%- end %>
      
      <%- end %>

      <%= _content_for(tab, :tab_content_for_instant_payment_notification) do %>
          
        <%= tag :br %>
        <%= form_for current_account, url: settings_path, html: { class: 'form form-horizontal' }, method: :put do |f| %>  
          <%= hidden_field_tag :active_tab, "Instant Payment Notification" %>

          <%= render partial: 'settings/ipn_form', locals: { f: f, account: current_account } %>          
          
          <%= submit_buttons_wrapper divider: false do %>
            <%= link_to root_path, class: 'btn btn-danger' do %>
              <%= content_tag :i, "Cancel", class: 'fa fa-remove' %>
            <%- end %>
            <%= button_tag :type => :submit, class: 'btn btn-primary', value: "update-account" do %>
              <%= content_tag :i, "Update", class: 'fa fa-edit' %>
            <%- end %>
          <%- end %>

        <%- end %>
      
      <%- end %>

    <%- end %>
  <%- end %>
<%- end %>