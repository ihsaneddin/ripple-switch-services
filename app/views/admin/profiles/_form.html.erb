<%= form_group profile, :password, { label_class: "col-sm-2" } do %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'New password', required: true %>
<%- end %>

<%= form_group profile, :password_confirmation, { label_class: "col-sm-2" } do %>
  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'New password confirmation', required: true %>
<%- end %>