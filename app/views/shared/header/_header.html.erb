<!-- start header -->
<%= content_tag :header, class: 'main-header' do %>
  <% unless local_assigns[:hide_logo] %>
    <!-- start logo -->
    <%= link_to '', class: 'logo' do %>
      <%= content_tag :span, "#{content_tag(:b, "Ripple")}SS".html_safe, class: 'logo-mini' %>
      <%= content_tag :span, "#{content_tag(:b, "Ripple")}SS".html_safe, class: 'logo-lg' %>
    <%- end %>
    <!-- end logo -->
  <%- end %>

  <%= yield %>

<%- end %>
<!-- end header -->